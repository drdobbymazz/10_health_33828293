<%- include('header') %>

<div class="content-section">
    <h1>My Fitness Goals</h1>
    <p>Track your fitness objectives and monitor your progress</p>

    <div class="goals-container">
        <div class="add-goal-section">
            <h2>Add New Goal</h2>
            <form action="/add-goal" method="POST" class="goal-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="goal_type">Goal Type *</label>
                        <input type="text" id="goal_type" name="goal_type" required class="form-control" 
                               placeholder="e.g., Weight Loss, Run Distance, Bench Press Max">
                    </div>
                    
                    <div class="form-group">
                        <label for="target_value">Target Value *</label>
                        <input type="number" id="target_value" name="target_value" required 
                               class="form-control" step="0.1" placeholder="e.g., 75">
                    </div>
                    
                    <div class="form-group">
                        <label for="current_value">Current Value *</label>
                        <input type="number" id="current_value" name="current_value" required 
                               class="form-control" step="0.1" placeholder="e.g., 82">
                    </div>
                    
                    <div class="form-group">
                        <label for="target_date">Target Date *</label>
                        <input type="date" id="target_date" name="target_date" required class="form-control">
                    </div>
                </div>
                
                <button type="submit" class="btn btn-primary">Add Goal</button>
            </form>
        </div>

        <div class="goals-list-section">
            <h2>Your Goals</h2>
            
            <% if (goals.length === 0) { %>
                <div class="empty-state">
                    <p>No goals set yet. Add your first fitness goal above!</p>
                </div>
            <% } else { %>
                <div class="goals-grid">
                    <% goals.forEach(goal => { 
                        const progress = ((goal.current_value / goal.target_value) * 100).toFixed(1);
                        const isAchieved = goal.achieved || progress >= 100;
                        const daysRemaining = Math.ceil((new Date(goal.target_date) - new Date()) / (1000 * 60 * 60 * 24));
                    %>
                        <div class="goal-card <%= isAchieved ? 'achieved' : '' %>">
                            <div class="goal-header">
                                <h3><%= goal.goal_type %></h3>
                                <% if (isAchieved) { %>
                                    <span class="goal-badge achieved">âœ“ Achieved</span>
                                <% } else if (daysRemaining < 0) { %>
                                    <span class="goal-badge overdue">Overdue</span>
                                <% } else { %>
                                    <span class="goal-badge active">Active</span>
                                <% } %>
                            </div>
                            
                            <div class="goal-progress">
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: <%= Math.min(progress, 100) %>%"></div>
                                </div>
                                <p class="progress-text"><%= progress %>% Complete</p>
                            </div>
                            
                            <div class="goal-details">
                                <div class="detail-row">
                                    <span class="detail-label">Current:</span>
                                    <span class="detail-value"><%= goal.current_value %></span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Target:</span>
                                    <span class="detail-value"><%= goal.target_value %></span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Remaining:</span>
                                    <span class="detail-value"><%= Math.abs(goal.target_value - goal.current_value).toFixed(1) %></span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Target Date:</span>
                                    <span class="detail-value"><%= new Date(goal.target_date).toLocaleDateString() %></span>
                                </div>
                                <% if (!isAchieved && daysRemaining >= 0) { %>
                                    <div class="detail-row">
                                        <span class="detail-label">Days Remaining:</span>
                                        <span class="detail-value"><%= daysRemaining %></span>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('footer') %>
